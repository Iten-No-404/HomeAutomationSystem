add wave -position insertpoint sim:/HAS2/clk
add wave -position insertpoint sim:/HAS2/rst
add wave -position insertpoint sim:/HAS2/curr_state
add wave -position insertpoint sim:/HAS2/next_state

add wave -position insertpoint sim:/HAS2/sfd
add wave -position insertpoint sim:/HAS2/srd
add wave -position insertpoint sim:/HAS2/sw
add wave -position insertpoint sim:/HAS2/sfa
add wave -unsigned -position insertpoint sim:/HAS2/st

add wave -position insertpoint sim:/HAS2/fdoor
add wave -position insertpoint sim:/HAS2/rdoor
add wave -position insertpoint sim:/HAS2/winbuzz
add wave -position insertpoint sim:/HAS2/alarmbuzz
add wave -position insertpoint sim:/HAS2/heater
add wave -position insertpoint sim:/HAS2/cooler

add wave -position insertpoint sim:/HAS2/display

# Reseting the state to start properly
force -freeze sim:/HAS2/clk 0 0, 1 {50 ps} -r 100
force -freeze sim:/HAS2/rst 1 0
run

# Case of Front Door open
force -freeze sim:/HAS2/rst 0 0
force -freeze sim:/HAS2/sfd 1 0
run

# Case of Back Door open
force -freeze sim:/HAS2/sfd 0 0
force -freeze sim:/HAS2/srd 1 0
run

# Case of Fire Alarm On
force -freeze sim:/HAS2/srd 0 0
force -freeze sim:/HAS2/sfa 1 0
run

# Case of Window open
force -freeze sim:/HAS2/sfa 0 0
force -freeze sim:/HAS2/sw 1 0
run

# Case of Cold Weather --> Use Heater (48 F)
force -freeze sim:/HAS2/sw 0 0
force -freeze sim:/HAS2/st 0110000 0
run

# Case of Hot Weather --> Use Cooler (71 F)
force -freeze sim:/HAS2/st 1000111 0
run

# Case of multiple signals with the sfd
force -freeze sim:/HAS2/st 0111100 0
force -freeze sim:/HAS2/sfd 1 0
force -freeze sim:/HAS2/srd 1 0
force -freeze sim:/HAS2/sfa 1 0
force -freeze sim:/HAS2/sw 1 0
run

# Case of multiple signals with the srd
force -freeze sim:/HAS2/sfd 0 0
run

# Case of multiple signals with the sfa
force -freeze sim:/HAS2/srd 0 0
force -freeze sim:/HAS2/st 0110000 0
run

# Case of multiple signals with the sw
force -freeze sim:/HAS2/sfa 0 0
force -freeze sim:/HAS2/st 1000111 0
run

force -freeze sim:/HAS2/sw 0 0
force -freeze sim:/HAS2/st 0111100 0
run